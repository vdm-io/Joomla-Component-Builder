		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>
		<!-- Rules Field. Type: Rules (joomla) -->
		<field
			name="rules"
			type="rules"
			label="Permissions in relation to this component_files_folders"
			translate_label="false"
			filter="rules"
			validate="rules"
			class="inputbox"
			component="com_componentbuilder"
			section="component_files_folders"
		/>
